<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>
<body>
    <body>
    
        <div class="container">
            <div class="profile-header">
              <div class="profile-img">
                <img src="/images/k.jpg" width="200" alt="Profile Image">
              </div>
              <div class="profile-nav-info">
                <h3 class="user-name"><%= user.fullname %></h3>
                <div class="address">
                  <p id="state" class="state">@<%= user.username %></p>
                  </div>
          
              </div>
              </div>
            </div>
          
            <div class="main-bd">
              <div class="left-side">
                <div class="profile-side">
                  <p class="user-mail"><i class="fa fa-envelope"></i> <%= user.email %></p>
                  <div class="profile-btn">
                        <button class="chatbtn" >Feeling Lucky</button>
                        <button class="chatbtn" >Account Settings</button>
                    <a href="/logout">
                        <button class="chatbtn" >Log Out</button>
                    </a>
                  </div>
                  <form action="/upload" method="post" enctype="multipart/form-data">
                    <label for="file-upload" class="custom-file-upload">
                      <input id="file-upload" type="file" name="file" accept=".png, .jpeg, .jpg" required>
                      Post Image
                    </label>
                    <input class="detail" type="text" name="postText" placeholder="caption" required/>
                    <button class="chatbtn" type="submit">Upload</button>
                  </form>
                      </div>
                    </div>
                    <div class="right-side">
                        <div class="profile-body">
                            <div id="columns">
                            <% user.posts.forEach(function(post){ %>
                                <figure>
                                    <img src="/uploads/<%=post.image%>">
                                      <figcaption><%=post.postText %></figcaption>
                                      <form action="/deletepost" method="post">
                                        <input type="hidden" name="cardId" value="<%=post._id%>" >
                                        <button class="delete" type="submit">Delete Post</button>
                                      </form>
                                      </figure>
                                      <%});%>
                                    </div>
                            </div>
                          </div>
                  </div>
                </div>
          
              </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <script src="../javascripts/profile.js"></script>
</body>
</html>